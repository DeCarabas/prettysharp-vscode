{
  "name": "prettysharp-vscode",
  "displayName": "prettysharp-vscode",
  "description": "VS Code Integration for PrettySharp",
  "version": "0.9.0",
  "license": "GPL-3.0-or-later",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:extension.helloWorld",
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PrettySharp configuration",
      "properties": {
        "prettysharp.executable": {
          "type": "string",
          "default": "prettysharp",
          "description": "The path to the prettysharp executable"
        }
      }
    },
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  }
}
